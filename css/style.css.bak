/*
==============
PUBLIC STYLE
==============
*/

* , *:after , *:before
{
	padding: 0;
	margin: 0;
	transition: .4s;
}

body
{
	font-family:lucida sans;
 }

.container
{
	width:85%;
	margin:auto;
}

/*
===========
HOME STYLE
===========
*/

.home
{
	width: 100%;
	background: url("../images/home/home1.jpg");
	background-size: cover;
	background-position: center;
	height: 100vh;
}

.navbar
{
	padding: 20px;
	overflow: hidden;
	position: relative;
}

.navbar .logo
{
	width: 50%;
	float:left;
}

.navbar .logo span
{
	color:#1569c7;
}

.navbar .ul-list 
{
	width:50%;
	float: left;
	list-style: none;
}

.navbar .logo .logo-text
{
	font-size: 30px;
	font-weight: bold;
}

.navbar .ul-list .list-items
{
	display: inline-block;
}

.navbar .ul-list .list-items a 
{
	display: block;
	color: #1569c7;
	text-decoration: none;
	padding: 18px 15px;
	font-weight: bold;
	font-size: 18px;
}

.navbar .ul-list .list-items a:hover
{
	color: #82cafa;
}

.navbar input , .navbar label
{
	position: absolute;
	top: 13px;
	right: 25px;
}


.navbar label .list 
{
	width: 40px;
	height: 40px;
}

.navbar label .list .list-item
{
	height: 8px;
	border-radius: 3px;
	background: #1569c7;
	margin: 2px;
}

.navbar label
{
	display: block;
	width: 15px;
	height: 15px;
	padding: 20px;
	cursor: pointer;
}

.navbar input
{
	display: none;
}


.navbar input:checked ~ .ul-list 
{
	display: block;
}

/* media for navbar style */
 @media (max-width:1280px)
{
	.navbar .logo
		{
			width: 40%;
			padding: 15px;
		}
		
	.navbar .ul-list 
		{
			width:55%;
			padding-left:20px;
		}
}
 
@media (min-width:992px)
{
	.navbar label
	{
		display: none;
	}
	
}


@media (max-width:991px)
{
	.navbar .logo
		{
			width: 100%;
			float:none;
		}
		
	.navbar .ul-list 
		{
			width:100%;
			float: none;
			margin-top: 20px;
			display:none;
		}
		
		.navbar .ul-list .list-items
		{
			display: block;
			text-align: center;
			transition: .4s;
		}
		
		.navbar .ul-list .list-items:hover
		{
				background:rgba(0,0,255,.1);
		}
		
}

.home-information
{
	position: absolute;
	top: 50%;
	left:8%;
	transform: translateY(-50%);
}

.home-information .home-title
{
	color: #000;
	margin: 20px 0px 20px;
	font-size: 75px;
}

.home-information .home-title span
{
	color: #1569c7;
	 
}

.home-information .home-info
{
	color: #000;
	font-size: 25px;
	margin-bottom: 50px;
}

.home-information .home-hello
{
	color:#1569c7;
	letter-spacing: 2px;
	font-size: 20px;
	font-weight: bold;
}

.home .home-information .home-btn
{
	background:#fff;
	color:#1569c7;
	font-size:18px;
	width: 150px;
	border:1px solid #1569c7 ;
	border-radius: 30px;
	font-weight: bold;
	padding:15px 13px;
	transition: .4s;
}

.home .home-information .home-btn:hover
{
	background:#1569c7;
	color: #82cafa;
	cursor: pointer;
}

@media (max-width:991px)
{
	.home-information
	{
		top: 80%;
	}
}

@media (max-width:580px)
{
		.home-information .home-title
	{
		font-size: 30px;
	}
}
	
