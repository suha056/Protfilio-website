/*
============
DROP STYLE
============
*/

.drop
{
	padding: 50px 0;
	text-align: center;
}

.drop .drop-title
{
	font-size: 30px;
	padding: 30px 0;
	font-weight: normal;
	color: #1569c7;
}

.drop .drop-title span
{
	font-weight: bold;
}

.drop form 
{
	width: 70%;
	margin: auto;
}

.drop form .form-input
{
	overflow: hidden;
}

.drop form .form-input input 
{
	width: 49%;
	box-sizing: border-box;
	padding: 5px;
	margin-bottom: 10px;
	outline: 0;
	border-radius:5px;
	border: 1px solid rgba(0,0,255,0.5);
}

.drop form .form-input input[type=text]
{
	float: left;
}

.drop form .form-input input[type=email]
{
	float: right;
}

.drop form input.sub
{
	width: 100%;
	margin-bottom: 10px;
	border-radius:5px;
	border: 1px solid rgba(0,0,255,0.5);
	padding: 5px;
}

.drop form textarea 
{
	width: 100%;
	outline: 0;
	background: #ccc;
	border-radius:5px;
	border: 1px solid rgba(0,0,255,0.5);
	padding: 5px;
}

.drop form input[type=submit]
{
	width: 20%;
	background: rgba(21,105,199,0.8);
	border: 1px solid rgba(21,105,199,0.8);
	color: #fff;
	cursor:pointer;
	margin-top: 20px;
	padding: 10px 0;
	border-radius: 30px;
}

.drop form input[type=submit]:hover
{
	background:rgba(21,105,199,0.5);
}

@media (max-width:575px)
{
	.drop .drop-title
	{
		font-size:40px;
	}
	
	.drop form .form-input input
	{
		width: 100%;
	}
	
	.drop form 
	{
		width: 90%;
	}
}

