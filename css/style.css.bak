/*
===============
SERVICES STYLE
===============
*/

.service
{
	height: auto;
	padding: 50px 0;
	background: #1569c7;
	overflow: hidden;
}

.service .service-title
{
	font-size: 60px;
	padding-bottom: 20px;
	text-align:center;
}

.service .service-title span
{
	font-weight: normal;
	color:#fff;
}

.service .part
{
	margin-top: 20px;
	width: 30%;
	float: left;
	height: auto;
	padding: 25px 0;
	border: 1px solid #fff;
	text-align: center;
	margin-left: 5%;
	box-sizing: border-box;
	border-radius: 30px;
}

.service .part .icon 
{
	color:#fff;
	font-size: 50px;
	display: block;
	text-align: center;
	margin: 25px 0px;
}

.service .part .part-title
{
	font-size:25px;
	color: #ddd;
	margin-bottom: 20px;
}

.service .part .line
{
	width:60%;
	margin: auto;
	margin-bottom: 20px;
}

.service .part .part-desc
{
	font-size: 16px;
	line-height: 27px;
	margin-bottom: 25px;
	color: #82cafa;
	padding: 20px;
}

.service .part.first
{
	margin-left: 0;
}

.part .button{
	background-color:transparent;
	color: white;
	text-decoration: none;
	border: 2px solid #fff;
	font-weight: bold;
	padding: 9px 22px;
	border-radius: 30px;
	transition: .4s; 
}
.part .button:hover{
	background-color: #82cafa;
	border: 2px solid #000;
	cursor: pointer;
	color:#000;
}

@media (max-width:768px)
{
		.service .part
	{
		width: 47%;
	}
	.service .last
	{
		margin-left:0;
	}
	
}
@media (max-width:575px)
{
		.service .part
	{
		width: 100%;
		float: none;
		margin-left: 0;
	}
}

/*
================
protfolio STYLE
================
*/
.protfolio
{
	background:rgba(180,207,236,.1);
	padding-top: 20px;
}

.protfolio .protfolio-title
{
	text-align: center;
	font-size: 35px;
	padding:20px 0;
}

.protfolio .protfolio-title span
{
	color:#1569c7;
}

.protfolio .protfolio-list
{
	list-style: none;
	text-align: center;
	margin: 20px 0;
	padding-bottom: 20px;
}

.protfolio .protfolio-list .protfolio-item
{
	display: inline-block;
	width: 100px;
	padding: 10px;
	cursor: pointer;
	color: #888;
}

.protfolio .protfolio-list .protfolio-item:hover
{
	color:rgba(101,158,199,.5);
}

.protfolio .protfolio-list .protfolio-item.active 
{ 
	background:#1569c7;
	color:#fff;
}

.protfolio .protfolio-list .protfolio-item.active:hover 
{ 
	background:rgba(101,158,199,.5);
	color:#888;
}

.box 
{
	overflow: hidden;
}

.box div
{
	width: 25%;
	float: left;
	font-size:0;
	position: relative;
}

.box div img 
{
	width: 100%;
	height: 218px;
}

.box div .overlay
{
	position: absolute;
	top:0;
	left: 0;
	bottom: 0;
	right: 0;
	background:rgba( 21, 105, 199 , .3);
	font-size: 15px;
	opacity:0;
	height: 100%;
	line-height: 1.8;
	transition: .4s;
	padding: 5px;
	padding-top: 20px;
	color: #fff;
	 
}

.box div .overlay span
{ 
	padding:5px 10px;
	cursor: pointer;
	color: #ddd;
	background: #1569c7;
	border: 1px solid #1569c7;
	border-radius: 30px;
	display: inline-block;
	text-align: center;
	margin-left: 5px;
}

.box div .overlay span:hover
{
	background:rgba(0,0,255,.5);
}

.box div:hover .overlay
{
	opacity: 1;
}

@media (max-width: 989px)
{
	.box div 
	{
		width: 50%;
	}
}

@media (max-width:575px)
{
	.protfolio .protfolio-list .protfolio-item
	{
		display: block;
		margin: auto;
	}
	
	.box div
	{
		width:100%;
	}
	
	.box div img 
	{
		width: 100%;
		height: 300px;
	}
}

/*
===============
PROFILE&SKILLS
===============
*/
.profile-skills
{
	padding: 50px 0;
	overflow:hidden;
	background:#f8f8f8;
}

.profile-skills .profile , .profile-skills .skills
{
	width: 50%;
	float: left;
}

.profile-skills .profile .profile-title , .profile-skills .skills .skills-title
{
	font-size: 40px;
	margin-bottom: 20px;
}

.profile-skills .profile .profile-title span, .profile-skills .skills .skills-title span 
{
	color:#1569c7;
}

.profile-skills .profile .profile-list
{
	list-style: none;
}

.profile-skills .profile .profile-list .profile-item
{
	margin-bottom:6px;
	line-height:2;
	color:#888;
}

.profile-skills .profile .profile-list .profile-item span
{
	display: inline-block;
	width: 100px;
	font-weight: bold;
	color:rgba(0, 0, 255,0.7);
}

.profile-skills .profile .profile-list .profile-item span.web
{
	font-weight: normal;
	color: #95b9c7;
}

.profile-skills .skills .skills-desc 
{
	font-size: 15px;
	color: #888;
	line-height: 1.5;
	margin-bottom: 20px;
}

.profile-skills .skills .bar
{
	padding: 10px;
	margin-bottom: 18px;
	overflow: hidden;
	color:#95b9c7;
}

.profile-skills .skills .bar .title
{
	float: left;
}

.profile-skills .skills .bar .perc
{
	float: right;
	margin-right: 100px;
}

.profile-skills .skills .bar .parent
{
	height: 2px;
	clear:both;
	background: #ddd;
	position: relative;
	top: 5px;
}

.profile-skills .skills .bar .parent span
{
	background: rgba(0, 0, 255,0.7);
	position: absolute;
	display: block;
	top:0;
	left: 0;
	height: 100%;
}

.profile-skills .skills .bar .parent span.sp1
{
	width: 100%;
}
.profile-skills .skills .bar .parent span.sp2
{
	width: 90%;
}
.profile-skills .skills .bar .parent span.sp3
{
	width: 80%;
}

@media (max-width:575px)
{
	.profile-skills .profile , .profile-skills .skills
	{
		width: 100%;
		float: none;
	}
	
	.profile-skills .profile
	{
		margin-bottom: 20px;
	}
	
}

